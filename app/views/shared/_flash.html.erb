<% if alert %>
  <div id="notice_wrapper">
    <p class="alert"><%= alert %></p>
  </div>
<% elsif notice %>
  <div id="notice_wrapper">
    <p class="notice"><%= notice %></p>
  </div>
<% end -%>

<script>
  $(document).ready(function(){
    setTimeout(function() {
      $('#notice_wrapper').fadeOut("slow", function() {
        $this.remove();
      });
    }, 4500 );
  });      
</script>